<UserControl x:Class="StudentApp.Views.StudentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DataGrid AutoGenerateColumns="False"
              SelectionMode="Single">

        <DataGrid.Columns>
            <DataGridTextColumn Header="Id" IsReadOnly="True"/><DataGridTextColumn Header="Id" IsReadOnly="True"/>
            <DataGridTextColumn Header="Name" IsReadOnly="False"/>
            <DataGridTextColumn Header="Courses Passed" IsReadOnly="True"/>
            <DataGridTextColumn Header="Date of Birth" IsReadOnly="False"/>
            <DataGridTextColumn Header="Age" IsReadOnly="True"/>
            <DataGridTextColumn Header="Graduated" IsReadOnly="True"/>
        </DataGrid.Columns>

    </DataGrid>

    </UserControl>
